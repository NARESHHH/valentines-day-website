NODE_ENV=production
PORT=3000
APP_BASE_URL=https://your-domain.com

# Comma-separated origins allowed to call API in production
ALLOWED_ORIGINS=https://your-domain.com

# Payload/request limits
REQUEST_SIZE_LIMIT=12mb
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX=300

# Security key (set a long random string in production)
DATA_ENCRYPTION_KEY=replace_with_long_random_secret

# Persistent paths (set these for container/VM deploys if needed)
DB_FILE=/app/data/app.db.json
UPLOAD_DIR=/app/data/uploads

# Image storage: local | cloudinary
IMAGE_STORAGE_PROVIDER=local

# Cloudinary (required when IMAGE_STORAGE_PROVIDER=cloudinary)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
